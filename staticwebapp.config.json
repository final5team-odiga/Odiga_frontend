{
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "routes": [
    {
      "route": "/.auth/me",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/login/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/signup/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/check_userid/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad"
    }
  }
}
