{
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "routes": [
    {
      "route": "/.auth/me",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/login/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/signup/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/check_userid/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/articles/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/articles/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/articles/*/comments/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/articles/*/comments/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/articles/*/like/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/profile/mypage/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/profile/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/magazine/generate-async/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/magazine/status/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/magazine/metadata/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/storage/images/upload/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/storage/images/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/storage/texts/upload/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/storage/texts/list/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/storage/magazines/list/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/storage/outputs/list/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/storage/download-output/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/speech/tts/",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad"
    }
  }
}
