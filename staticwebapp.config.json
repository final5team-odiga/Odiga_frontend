{
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*", "/api/*", "/.auth/*"]
  },
  "routes": [
    {
      "route": "/api/auth/login*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/signup*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/auth/check_userid*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    },
    "403": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/index.html"
    }
  }
}
